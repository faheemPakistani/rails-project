<form action="<%= post_suggestions_path(post) %>" data-remote = true method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <% if !parent.nil? %>
    <input type="hidden" name="suggestion[parent_id]" value="<%= parent.id %>">
  <% end %>
  <div>
    <textarea  type="text_area" required name="suggestion[body]" rows="3" cols="20"></textarea>
  </div>
  <input type="submit" value="Submit">
</form>
