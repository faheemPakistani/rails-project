<section class="vh-100">
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-9 col-lg-6 col-xl-5">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
          class="img-fluid" alt="Sample image">
      </div>
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">

        <h2>Sign up</h2>
        <br>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <form class="form-signin">

        <div class="form-outline mb-8">
          <%= f.label :name %><br />
          <%= f.text_field :name, autofocus: true, placeholder: "Enter Name", required: true, class: "form-control", autocomplete: "name" %>
        </div>
        
          <!-- Email input -->
          <div class="form-outline mb-8">
          <label class="form-label" for="form3Example3">Email address</label>
            <%= f.email_field :email,required: true, placeholder: "Enter Email", autofocus: true, autocomplete: "email", class: "form-control", id: "inputEmail"%>
          </div>


          <!-- Password input -->

          <div class="field form-outline mb-8">
          <label class="form-label" for="form3Example4"><%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %></label>
          <%= f.password_field :password, placeholder: "Enter Password", autocomplete: "new-password", class: "form-control", id: "inputPassword" %>
          </div>

          <div class="field form-outline mb-8">
          <label class="form-label" for="form3Example4"><%= f.label :password_confirmation %></label>
          <%= f.password_field :password_confirmation, placeholder: "Confirm Password", autocomplete: "new-password", class: "form-control", id: "inputPassword"  %>
          </div>

          <div class="field">
            <b>Role</b><br />
            <%= f.radio_button :user_type, "teacher", :checked => true %> Teacher<br />
            <%= f.radio_button :user_type, "student" %> Student<br />
          </div>

          <div class="d-flex justify-content-between align-items-center">
          </div>

          <div class="text-center text-lg-start mt-8 pt-2 ">
            <%= f.submit "Sign up", :class => "btn btn-primary padding-left: 2.5em; padding-right: 2.5rem;" %>
            <p class="small fw-bold mt-8 pt-1 mb-0"><%= render "devise/shared/links" %></p>
          </div>

        </form>
        <% end %>
      </div>
    </div>
  </div>
</section>

<script>
$(".btnn").checked = true;
</script>





