<h1>Classrooms</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <div class="news-main-div row">
    <% @classrooms.each do |classroom| %>
        <div class="card col-sm-4 news-child-div m-1">
          <div>
            <p class="ml-2"></p>

            <div class="classroom_header">
              <div>
                <%if classroom.avatar.attached?%>
                  <img class="classroom_avatar" src="<%= (url_for(classroom.avatar)) %>"
                <%end%>

                <h6 class="ml-2 classroom_title"><%= classroom.title%> </h6>
              </div>
            </div>

            <h6 class="classroom_description"><%= classroom.description%></h6>
              <%= button_to 'Open', classroom, :class => "classroom_read_button btn btn-primary", :method => :get%>
              
        </div>
        </div>
      <% end %>
      </div>
  </tbody>
</table>

<br>