<div class="new_classroom mb-5">
  <h3>Classrooms</h3>
</div>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <%if !@classrooms.nil?%>
  <div class="news-main-div d-flex flex-row justify-content-center">
    <% @classrooms.each do |classroom| %>
        <div class="card rounded-top col-sm-4 news-hild-div m-2">
            <div class="card-header" style='background-image: url("https://gstatic.com/classroom/themes/Honors.jpg");'>
              <div class=' text-white'>
                <%if classroom.avatar.attached?%>
                  <img class="classroom_avatar" src="<%= (url_for(classroom.avatar)) %>"
                <%end%>
                <h6 class="ml-2 text-white"><%= classroom.title%> </h6>
              </div>
            </div>
            <div class='card-body'>
              <h6 class="classroom_description"><%= classroom.description%></h6>
            </div>
            <div class='card-footer d-flex flex-row justify-content-center'>
              <%= button_to 'Open', classroom, :class => "classroom_read_btn btn btn-primary", :method => :get%>
            </div>
        </div>
      <% end %>
      </div>
  <%end%>
  </tbody>
</table>

<br>

<style type="text/css">

  .card:hover {
    box-shadow: 1px 1px 1px black;
    transform:scale(1);
  }

  .card {
    height: 350px;
  transition:.5s;
  margin: 3rem;
  }

</style>